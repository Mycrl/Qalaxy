{
    "compilerOptions": {
        "skipLibCheck": true,
        "esModuleInterop": true,
        "target": "ES2018",
        "module": "ES6",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "rootDirs": [ "./" ],
        "extendedDiagnostics": false,
        "experimentalDecorators": true,
        "incremental": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}
